
<h1>New Article</h1>
<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, 'Content' %>
    <%= form.rich_text_area :content%>
  </div>
  <div>
     <%= form.label :author, 'Author' %>
    <%= form.text_field :author %>
  </div>
  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>

